<Window
    x:Class="DCHistory.WPFAboutBox1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Uid="idAboutBox"
    Title="{Binding RelativeSource={RelativeSource Self}, Mode=OneTime, Path=ProductTitle}"
    Style="{DynamicResource AboutDialogStyle}"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <XmlDataProvider
            x:Key="aboutProvider"
            IsAsynchronous="False"
            IsInitialLoadEnabled="True"
            XPath="ApplicationInfo">
            <x:XData>
                <ApplicationInfo xmlns="">
                    <Link Uri="https://dclasersystem.com">More Info</Link>
                </ApplicationInfo>
            </x:XData>
        </XmlDataProvider>
        <Image x:Key="aboutLogo" Source="dcLogo.png" />
        <Style x:Key="AboutDialogStyle" TargetType="Window">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="500" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="SizeToContent" Value="Height" />
        </Style>
        <Style x:Key="DisplayAreaStyle" TargetType="{x:Type StackPanel}">
            <Setter Property="Margin" Value="10,10,10,5" />
        </Style>
        <Style x:Key="BackgroundStyle" TargetType="{x:Type StackPanel}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Offset="0" Color="LightBlue" />
                        <GradientStop Offset="0.55" Color="White" />
                        <GradientStop Offset="0.85" Color="White" />
                        <GradientStop Offset="1" Color="LightBlue" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style x:Key="ParagraphSeparator" TargetType="{x:Type Label}">
            <Setter Property="Padding" Value="0,10,0,0" />
        </Style>
        <Style x:Key="LinkLabelStyle">
            <Setter Property="Control.Padding" Value="0" />
            <Setter Property="Control.VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="ReadOnlyDescStyle" TargetType="{x:Type TextBox}">
            <Setter Property="MinLines" Value="6" />
            <Setter Property="MaxLines" Value="6" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="TextWrapping" Value="WrapWithOverflow" />
            <Setter Property="VerticalScrollBarVisibility" Value="Visible" />
        </Style>
        <Style x:Key="OkButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="MinWidth" Value="75" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="DockPanel.Dock" Value="Right" />
            <Setter Property="IsDefault" Value="True" />
            <Setter Property="IsCancel" Value="True" />
        </Style>
    </Window.Resources>
    <StackPanel x:Uid="clientArea" Style="{StaticResource BackgroundStyle}">
        <StaticResource ResourceKey="aboutLogo" />
        <StackPanel
            x:Uid="displayArea"
            DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Mode=OneTime}"
            Style="{StaticResource DisplayAreaStyle}">
            <Label
                x:Name="productName"
                x:Uid="productName"
                Content="{Binding Mode=OneTime, Path=Product}" />
            <StackPanel x:Uid="versionArea" Orientation="Horizontal">
                <Label
                    x:Name="versionLabel"
                    x:Uid="VersionLabel"
                    Content="Version - " />
                <Label
                    x:Name="version"
                    x:Uid="version"
                    Content="{Binding Mode=OneTime, Path=Version}" />
            </StackPanel>
            <Label
                x:Name="copyright"
                x:Uid="copyright"
                Content="{Binding Mode=OneTime, Path=Copyright}" />
            <Label
                x:Name="company"
                x:Uid="company"
                Content="{Binding Mode=OneTime, Path=Company}" />
            <Label
                x:Name="reserved"
                x:Uid="reserved"
                Content="All Rights Reserved." />
            <Label
                x:Name="info"
                x:Uid="info"
                Content="Product details:"
                Style="{StaticResource ParagraphSeparator}" />
            <TextBox
                x:Name="description"
                x:Uid="description"
                Style="{StaticResource ReadOnlyDescStyle}"
                Text="{Binding Mode=OneTime, Path=Description}" />
            <DockPanel x:Uid="buttonArea">
                <Button
                    x:Name="okButton"
                    x:Uid="okButton"
                    Content="OK"
                    Style="{StaticResource OkButtonStyle}" />
                <Label
                    x:Name="productLink"
                    x:Uid="productLink"
                    Style="{StaticResource LinkLabelStyle}">
                    <Hyperlink
                        x:Name="hyperlink"
                        x:Uid="hyperlink"
                        Hyperlink.RequestNavigate="hyperlink_RequestNavigate"
                        NavigateUri="{Binding Mode=OneTime, Path=LinkUri}"
                        Style="{StaticResource LinkLabelStyle}">
                        <TextBlock Text="{Binding Mode=OneTime, Path=LinkText}" />
                    </Hyperlink>
                </Label>
            </DockPanel>
        </StackPanel>
    </StackPanel>
</Window>