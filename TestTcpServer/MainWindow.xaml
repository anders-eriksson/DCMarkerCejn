<Window
    x:Class="TestTcpServer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestTcpServer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="textBox"
            Margin="10,102,10,10"
            Text="{Binding Path=TextboxValue, Mode=TwoWay}"
            TextWrapping="Wrap" />
        <Button x:Name="button" Content="Clear" HorizontalAlignment="Left" Margin="441,74,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" />
    </Grid>
</Window>